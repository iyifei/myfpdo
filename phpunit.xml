<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         syntaxCheck="false"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         stopOnRisky="false"
>
    <logging>
        <log type="coverage-html"
             target="./report/coverage/html/NovaService"
             charset="UTF-8"
             highlight="true"
             lowUpperBound="35"
             highLowerBound="70"/>
        <log type="coverage-clover"
             target="./report/coverage/log/coverage.xml"/>
        <log type="tap" target="./report/testdox/index.tap"/>
        <log type="testdox-html" target="./report/testdox/index.html"/>
        <log type="testdox-text" target="./report/testdox/index.txt"/>
    </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src/</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="CloudServiceTest">
            <directory suffix=".php">./tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>